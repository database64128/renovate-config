{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "description": "Renovate configuration for Go projects",
    "extends": [
        "github>database64128/renovate-config"
    ],
    "packageRules": [
        {
            "description": "Disable minimum Go version updates: https://github.com/renovatebot/renovate/issues/16715",
            "matchManagers": [
                "gomod"
            ],
            "matchDepTypes": [
                "golang"
            ],
            "enabled": false
        }
    ],
    "postUpdateOptions": [
        "gomodTidy",
        "gomodUpdateImportPaths"
    ]
}
