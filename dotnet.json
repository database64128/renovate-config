{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "description": "Renovate configuration for .NET projects",
    "extends": [
        "github>database64128/renovate-config"
    ],
    "packageRules": [
        {
            "matchPackageNames": [
                "System.Interactive.Async",
                "System.Linq.Async"
            ],
            "groupName": "Ix.NET"
        },
        {
            "matchPackagePrefixes": [
                "System.CommandLine"
            ],
            "groupName": "System.CommandLine"
        },
        {
            "matchPackagePrefixes": [
                "ReactiveUI",
                "ReactiveMarbles"
            ],
            "groupName": "ReactiveUI"
        }
    ]
}
